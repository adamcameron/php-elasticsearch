{% extends 'base.html.twig' %}

{% block title %}Instructor Details{% endblock %}

{% block body %}
    <h1>{{ instructor.fullName }}</h1>
    <ul>
        <li>ID: {{ instructor.id }}</li>
        <li>Email: {{ instructor.email }}</li>
        <li>Department:
            {% if instructor.department %}
                <a href="{{ path('department_view', {id: instructor.department.id}) }}">
                    {{ instructor.department.name }}
                </a>
            {% else %}
                N/A
            {% endif %}
        </li>
    </ul>
    <h2>Courses</h2>
    {% if instructor.courses|length > 0 %}
        <ul>
            {% for course in instructor.courses %}
                <li>
                    <a href="{{ path('course_view', {id: course.id}) }}">
                        {{ course.title }} ({{ course.code }})
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>No courses assigned.</p>
    {% endif %}
    <a href="{{ path('instructor_list') }}">Back to list</a>
{% endblock %}
