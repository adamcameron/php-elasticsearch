{% extends 'base.html.twig' %}

{% block title %}Assignment Details{% endblock %}

{% block body %}
    <h1>{{ assignment.title }}</h1>
    <ul>
        <li>ID: {{ assignment.id }}</li>
        <li>Course:
            {% if assignment.course %}
                <a href="{{ path('course_view', {id: assignment.course.id}) }}">
                    {{ assignment.course.title }}
                </a>
            {% else %}
                N/A
            {% endif %}
        </li>
        <li>Description: {{ assignment.description }}</li>
    </ul>
    <div>
        <a href="{{ path('assignment_edit', {id: assignment.id}) }}" class="btn btn-secondary">Edit</a>
    </div>
    <div>
        <a href="{{ path('assignment_list') }}">Back to list</a>
    </div>
{% endblock %}
